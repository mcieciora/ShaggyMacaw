listView("INPUT.PROJECT_NAME") {
    description("INPUT.PROJECT_NAME")
    filterBuildQueue()
    filterExecutors()
    jobs {
        name('INPUT.PROJECT_NAME')
        regex('.*INPUT.PROJECT_NAME.*')
    }
    columns {
        status()
        weather()
        name()
        lastSuccess()
        lastFailure()
        lastDuration()
    }
}